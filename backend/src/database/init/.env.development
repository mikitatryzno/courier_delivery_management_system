# Development Environment Configuration
ENVIRONMENT=development

# Database (SQLite for development)
DATABASE_URL=sqlite:///./data/courier_delivery.db
DATABASE_URL_ASYNC=sqlite+aiosqlite:///./data/courier_delivery.db

# Security
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API
API_V1_STR=/api
PROJECT_NAME=Courier Delivery Management System (Dev)

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000"]

# Logging
LOG_LEVEL=DEBUG